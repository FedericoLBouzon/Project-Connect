        .collapse {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background-color: #3f51b5;
            z-index: 1;
            display: flex;
            flex-direction: column;
            padding: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .collapse.show {
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                background-color: #3f51b5;
                z-index: 1;
                display: flex;
                flex-direction: column;
                padding: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

                .collapse.show .navbar-nav {
                    justify-content: center;
                }

                .collapse.show .nav-item {
                    width: 100%;
                    text-align: center;
                }
        }
    </style>

